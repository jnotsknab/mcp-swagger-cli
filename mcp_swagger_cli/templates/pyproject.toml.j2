[tool.poetry]
name = "{{ server_name }}"
version = "{{ version }}"
description = "{{ description | sanitize_toml_string }}"
readme = "README.md"
authors = ["Generated by mcp-swagger-cli"]

[[tool.poetry.packages]]
include = "{{ server_name }}"

[tool.poetry.scripts]
{{ server_name }} = "{{ server_name }}.main:main"

[tool.poetry.dependencies]
python = "^3.10"
mcp = ">=1.0.0"
httpx = ">=0.27.0"

[tool.poetry.group.dev.dependencies]
pytest = ">=8.0.0"
pytest-asyncio = ">=0.23.0"

[build-system]
requires = ["poetry-core"]
build-backend = "poetry.core.masonry.api"
